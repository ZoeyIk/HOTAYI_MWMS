<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15px"
        android:layout_margin="10px"
        android:background="@color/PapayaWhip">
        
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:contentDescription="@string/login"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/name"
            android:id="@+id/empName"
            android:textSize="@dimen/abc_text_size_medium_material"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="@string/loginID"
            android:id="@+id/empID"
            android:textSize="@dimen/abc_text_size_medium_material"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15px"
        android:paddingRight="15px">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            cardview:cardCornerRadius="5dp"
            cardview:cardElevation="4sp"
            android:layout_weight="1"
            android:padding="10px"
            android:layout_margin="10px"
            android:clickable="true"
            android:id="@+id/card_scan">
        
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/SizzlingSunrise">
            
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/scanner"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/scan"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:layout_gravity="center"/>
            
            </LinearLayout>
        
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            cardview:cardCornerRadius="5dp"
            cardview:cardElevation="4sp"
            android:layout_weight="1"
            android:padding="10px"
            android:layout_margin="10px"
            android:clickable="true"
            android:id="@+id/card_search">
        
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/SizzlingSunrise">
            
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/report"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/report"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:layout_gravity="center"/>
            
            </LinearLayout>
        
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15px"
        android:paddingRight="15px">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            cardview:cardCornerRadius="5dp"
            cardview:cardElevation="4sp"
            android:layout_weight="1"
            android:padding="10px"
            android:layout_margin="10px"
            android:clickable="true"
            android:id="@+id/card_map">
        
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/SizzlingSunrise">
            
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/map2"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/map"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/map"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:layout_gravity="center"/>
            
            </LinearLayout>
        
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            cardview:cardCornerRadius="5dp"
            cardview:cardElevation="4sp"
            android:layout_weight="1"
            android:padding="10px"
            android:layout_margin="10px"
            android:clickable="true"
            android:id="@+id/card_logout">
        
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/SizzlingSunrise">
            
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logout"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/logout"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/abc_text_size_medium_material"
                    android:layout_gravity="center"/>
            
            </LinearLayout>
        
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
